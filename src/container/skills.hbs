{{!--
Це код container файлу для skills сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/skills"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="All skills" big=true }}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}}({{point}}){{/if}}
                    {{#if isTop}}<b><i style="color: red">Top!</i></b> {{/if}}
                    {{#unless point includeZero=true }} <b><i> I don't learn it.</i></b> {{/unless}}
                    {{#unless point}}
                    {{#if point includeZero=true}}<b><i style="color: blue"> I'm learning it now...</i></b>{{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My hobbies" big=false }}
            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain}}
                    <i>(favourite)</i>
                    {{/if}}
                </li>
                {{/each}}
            </ol>
        </section>
    </main>
    {{/with}}
</div>

