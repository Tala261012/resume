<main class="row gy-4">

    <section>
        {{#with newsBlock}}
        <h1 class="text-center mb-4">{{title}}</h1>

        <div class="row gx-2 gy-3">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-secondary">
                    <div class="card-header text-light">
                        {{title}}
                        {{#if idNew}} <span class="badge text-bg-success text-light rounded-pill">New!</span> {{/if}}
                        {{#if isTop}} <span class="badge text-bg-danger text-light rounded-pill">Top!</span> {{/if}}
                    </div>
                    <div class="card-body">
                        {{description}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with goodsBlock}}

        <div class="nav nav-tabs mb-5">
            {{#each tabs}}
            <div class="nav-item">
                {{#if isActive}}
                <a href="#" class="nav-link active">{{text}}</a>
                {{else}}
                {{#if isDisabled}}
                <a href="#" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="#" class="nav-link">{{text}}</a>
                {{/if}}
                {{/if}}
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each cards}}
            {{> shopcard}}
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{#with subscribe}}
        <div class="card text-bg-dark p-3">

            <div class="row">
                <div class="col-7">
                    <h2 class="mt-1">{{header}}</h2>
                    <p class="mb-0">{{description}}</p>
                </div>

                <div class="col-5 p-4">
                    {{#each buttons}}
                    <a href="{{link}}" type="{{type}}" class="btn btn-primary ms-2">{{text}}</a>
                    {{/each}}
                </div>
            </div>

        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    {{> shopaction}}



</main>