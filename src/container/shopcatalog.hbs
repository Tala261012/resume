<main>

    {{>breadcrumb}}

    <h1 class="mb-5">{{header}}</h1>

    <section>
        <div class="row mb-5">
            {{#each sortBlock}}
            <div class="col-3">
                <select name="name" id="1" class="form-select">
                    <option value="0" selected disabled>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}} {{!-- sortBlock --}}
        </div>
    </section>

    <div class="row">
        <div class="col-4 mb-5"> {{!-- filters --}}
            {{#with filterBlock}}
            <div class="card p-2 col-12">

                <div>
                    {{#with sellers}}
                    <label class="form-label">{{title}}</label>
                    {{#each list}}
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

                <hr class="my-3">

                <div>
                    {{#with brands}}
                    <label class="form-label">{{title}}</label>
                    <input class="form-control mb-3" type="text" placeholder="{{input.placeholder}}">

                    {{#each options}}
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

                <hr class="my-3">

                <div>
                    {{#with price}}
                    <label class="form-label">{{title}}</label>
                    <div class="row">
                        <div class="col-4">
                            <input class="form-control me-2" type="text" placeholder="{{range.from}}">
                        </div>
                        <div class="col-4">
                            <input class="form-control me-2" type="text" placeholder="{{range.to}}">
                        </div>
                        <div class="col-4">
                            <a href="{{button.link}}" class="btn btn-outline-dark">{{button.text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>


                {{#each filterList}}
                <hr class="my-3">
                <div>
                    <label class="form-label">{{title}}</label>
                    {{#each options}}
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                </div>
                {{/each}} {{!-- filterList --}}

                {{/with}} {{!-- end of filterBlock --}}
            </div>
        </div>


        <div class="col-8 mb-5"> {{!-- goods --}}

            {{> catalogItem}}

        </div>
    </div>{{!-- end of row --}}


    {{> shopaction}}

</main>