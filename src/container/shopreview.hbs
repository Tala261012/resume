<main>
    <section>
        {{#with formBlock}}
        <div class="row gy-5">
            {{!-- Оставьте отзыв --}}
            <div class="col-8">
                <div class="row gy-3">
                    <div class="col-12">
                        <h1 class="mb-3">{{header}}</h1>
                        <div>
                            {{#with rating}}
                            {{title}}: {{value}}
                            {{/with}}
                        </div>

                        {{#with actionBlock}}
                        <div class="nav nav-tabs col-12">
                            {{#each tabs}}
                            <div class="nav-item">
                                <a href="#" {{#if isActive}} class="nav-link active" {{else}} class="nav-link" {{/if}}>
                                    {{text}}
                                </a>
                            </div>
                            {{/each}}
                        </div>

                        <hr class="my-5">

                        <div class="col-12">
                            {{#with field}}
                            <div class="row">
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                </div>
                                <div class="col-4">
                                    <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        {{/with}} {{!-- actionBlock --}}

                        <hr class="my-5">

                        <div class="col-12">
                            {{#with feedbackBlock}}
                            <h3 class="mb-3">{{title}}</h3>
                            <div class="mt-5">
                                {{#each buttons}}
                                <a href="{{link}}" {{#if isWarning}} class="btn btn-warning me-3" {{/if}} {{#if
                                    isSuccess}} class="btn btn-success me-3" {{/if}} {{#if isDanger}}
                                    class="btn btn-danger me-3" {{/if}}>{{text}}</a>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>

                    </div>
                </div>
            </div>

            {{!-- Узкая колонка --}}
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card mb-3">
                    <div class="card-body">
                        <img src="{{photo}}" alt="photo" width="150px">
                        <h6 class="mt-3 mb-0">{{name}}</h6>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="mb-2">{{price}}</h5>
                        <div class="mb-2">В наявностi</div>
                        {{#each buttons}}
                        <div>
                            <a href="{{link}}" {{#if isPrimary}} class="btn btn-primary mb-2" {{/if}} {{#if
                                isSecondary}} class="btn btn-secondary" {{/if}}>
                                {{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="card">
                    {{#with seller}}
                    <div class="card-body">
                        {{title}}: <b>{{value}}</b>
                    </div>
                    {{/with}}
                </div>
                {{/with}} {{!-- goodsInfo --}}
            </div>
        </div>
        {{/with}} {{!-- formBlock --}}
    </section>

    <hr class="my-5">

    <section>
        {{!-- Отзывы юзеров --}}
        {{> reviewItem}}
    </section>


    {{> shopaction}}

</main>