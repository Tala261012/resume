<div class="row">
    {{#each goodsList}}
    <div class="col-6 mb-4">
        <div class="card">
            <img class="cart-img-top" src="{{img}}" alt="img">
            <div class="cadr-body p-3">
                <div class="mb-2">
                    {{#if isHot}}
                    <span class="badge rounded-pill text-bg-warning ">Hot!</span>
                    {{/if}}

                    {{#if isNew}}
                    <span class="badge rounded-pill text-bg-primary ">New!</span>
                    {{/if}}
                </div>

                {{#if isFast}}
                <div><span class="badge text-bg-success my-1">Швидка доставка!</span></div>
                {{/if}}

                {{#if isFree}}
                <div><span class="badge text-bg-secondary my-1">Безкоштовна доставка!</span></div>
                {{/if}}

                <h6 class="my-2">{{name}}</h6>
                <div>{{review.amount}} {{review.text}}</div>
                <h5 class="my-2">{{price}}</h5>
                <div class="mb-3">{{delivery}}</div>

                {{#each buttons}}
                <div class="mb-2">
                    <a href="{{link}}" {{#if isPrimary}} class="btn btn-primary" {{/if}} {{#if isSecondary}}
                        class="btn btn-secondary" {{/if}}>{{text}}</a>
                </div>
                {{/each}}

                <ul class="mt-3 mb-0">
                    {{#each characteristics}}
                    <li>{{title}}: {{value}}</li>
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
    {{/each}}
</div>